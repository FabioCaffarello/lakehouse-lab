{
  "name": "lake-actors-cluster-server-actor",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "services/lake-actors-cluster/server-actor",
  "tags": ["lang:golang"],
  "targets": {
    "serve": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "{projectRoot}/cmd/actor/main.go"
      }
    },
    "test": {
      "executor": "@nx-go/nx-go:test"
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "tidy": {
      "executor": "@nx-go/nx-go:tidy"
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["tidy"],
      "options": {
        "command": "GOOS=linux CGO_ENABLED=0 GOARCH=amd64 go build -ldflags=\"-w -s\" -o dist/actor ./cmd/actor/main.go",
        "cwd": "{projectRoot}"
      }
    },
    "image": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "docker build -t fabiocaffarello/server-actor:latest -f ./Dockerfile .",
        "cwd": "{projectRoot}"
      }
    }
  }
}
