{
  "$schema": "https://json-schema.org/schema",
  "$id": "composer",
  "type": "object",
  "title": "Composer Generator",
  "properties": {
    "name": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "action": {
      "type": "string",
      "enum": ["create", "delete", "update", "list", "get"],
      "x-prompt": {
        "message": "Qual ação deseja realizar?",
        "type": "select",
        "items": [
          { "value": "create", "label": "Create" },
          { "value": "delete", "label": "Delete" },
          { "value": "update", "label": "Update" },
          { "value": "list", "label": "List" },
          { "value": "get", "label": "Get" }
        ]
      }
    }
  },
  "required": ["name", "action"],
  "allOf": [
    {
      "if": {
        "properties": { "action": { "const": "create" } }
      },
      "then": {
        "$ref": "/schemas/createFields"
      }
    },
    {
      "if": {
        "properties": { "action": { "const": "delete" } }
      },
      "then": {
        "$ref": "#/definitions/deleteFields"
      }
    },
    {
      "if": {
        "properties": { "action": { "const": "update" } }
      },
      "then": {
        "$ref": "#/definitions/updateFields"
      }
    },
    {
      "if": {
        "properties": { "action": { "const": "get" } }
      },
      "then": {
        "$ref": "#/definitions/getFields"
      }
    }
  ],
  "$def": {
    "createFields": {
      "$id": "/schemas/createFields",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "properties": {
        "fields": {
          "type": "array",
          "description": "Campos para criação",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "type": {
                "type": "string",
                "enum": ["string", "number", "boolean"]
              },
              "required": { "type": "boolean" }
            },
            "required": ["name", "type"]
          },
          "x-prompt": "Defina os campos do recurso"
        }
      },
      "required": ["fields"]
    },
    "deleteFields": {
      "properties": {
        "id": {
          "type": "string",
          "x-prompt": "Informe o ID para exclusão"
        }
      },
      "required": ["id"]
    },
    "updateFields": {
      "properties": {
        "id": {
          "type": "string",
          "x-prompt": "ID do recurso a ser atualizado"
        },
        "fields": {
          "type": "array",
          "description": "Campos a serem atualizados",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "value": { "type": "string" }
            },
            "required": ["name"]
          },
          "x-prompt": "Defina os campos a atualizar"
        }
      },
      "required": ["id", "fields"]
    },
    "getFields": {
      "properties": {
        "id": {
          "type": "string",
          "x-prompt": "Informe o ID do recurso"
        }
      },
      "required": ["id"]
    }
  }
}
