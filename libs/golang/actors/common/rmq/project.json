{
  "name": "actors-common-rmq",
  "$schema": "../../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/golang/actors/common/rmq",
  "tags": ["lang:golang"],
  "targets": {
    "test": {
      "executor": "@nx-go/nx-go:test"
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "tidy": {
      "executor": "@nx-go/nx-go:tidy"
    },
    "up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f docker-compose.yml up -d",
        "cwd": "{projectRoot}"
      }
    },
    "health": {
      "executor": "nx:run-commands",
      "options": {
        "command": "source ./hack/rabbitmq-health-check.sh",
        "cwd": "{projectRoot}"
      }
    },
    "down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f docker-compose.yml down",
        "cwd": "{projectRoot}"
      }
    },
    "check-integration": {
      "executor": "nx:run-commands",
      "dependsOn": ["tidy", "down", "up", "health"],
      "options": {
        "command": "go test -tags=integration ./... && sleep 2 && docker compose down -v",
        "cwd": "{projectRoot}"
      }
    }
  }
}
